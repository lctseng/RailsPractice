<div class="fields">
   <p>
   <%= link_to_remove_fields("移除此問題",f) %>
      <%= f.label :content,"問題欄位" %><br />
      <%= f.text_area :content, :row => 2 %><br />
   </p>
   <%= f.fields_for :answers do |builder| %>
      <%= render 'answer_fields' , :f => builder %>
   <% end %>
   <p><%= link_to_add_fields("新增答案",f,:answers) %></p>
</div>


