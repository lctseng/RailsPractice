<%= f.text_area :content %>
<div class="form-actions">
   <%= f.submit "Submit" , :disable_with => "Submiting..." , :class => "btn btn-primary" %>
</div>
<% if @post.errors.any?  %>
   <ul>
   <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
   <% end %>
   </ul>
<% end %>



